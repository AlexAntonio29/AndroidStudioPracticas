<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa del borde -->
    <item>
        <shape>
            <stroke android:width="2dp" android:color="#0066FF"/> <!-- Borde rojo de 2dp -->
            <corners android:radius="8dp"/> <!-- Esquinas redondeadas -->
        </shape>
    </item>

    <!-- Capa del fondo con el selector -->
    <item>
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_pressed="true" android:drawable="@color/gris_claro" />
            <item android:drawable="@color/white" />
        </selector>
    </item>

</layer-list>


